<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Content</label>
      <input id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn-light btn-outline-dark">Create</button>
  </form>
</section>

{{!-- will only show if there are posts --}}
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

</body>

<script src="/javascript/add-post.js"></script>